{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "mocha": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "no-unused-vars": ["warn", { "args": "none" }],
    "eqeqeq": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["**/__tests__/**", "**/*.test.js"],
      "env": {
        "mocha": true 
      }
    }
  ]
}
